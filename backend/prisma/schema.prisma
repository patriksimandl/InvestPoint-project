generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {  
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  stocks    userPortfolio[]
}

model lastFetch{
  id          Int        @id @default(autoincrement())
  lastFetch   DateTime
}


model Stocks {
  id        Int       @id @default(autoincrement())
  name      String
  symbol    String    @unique
  logoURL      String
  data      Json?
}

model userPortfolio{
  id                         Int       @id @default(autoincrement())
  userId                     Int       @unique
  totalBalance               Decimal   @default(1000)@db.Decimal(18,8)
  cashBalance                Decimal       @default(1000)@db.Decimal(18,8)
  totalBalanceHistory        Json 
  cashBalanceHistory         Json
  stockHoldings              Json? 
  user                       User      @relation(fields: [userId], references: [id])
}


