generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {  
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  stocks    userPortfolio[]
}

model lastFetch{
  id          Int        @id @default(autoincrement())
  lastFetch   DateTime
}


model Stocks {
  id          Int       @id @default(autoincrement())
  name        String
  symbol      String    @unique
  logoURL      String
  data          Json?
  companyProfile Json?  
}

model userPortfolio{
  id                         Int       @id @default(autoincrement())
  userId                     Int       @unique
  totalBalance               Decimal   @default(1000)@db.Decimal(18,8)
  cashBalance                Decimal       @default(1000)@db.Decimal(18,8)
  totalBalanceHistory        Json      @default("[]")
  cashBalanceHistory         Json      @default("[]")
  stockHoldings              Json      @default("{}")
  transactionHistory         transactionHistory[]
  user                       User      @relation(fields: [userId], references: [id])
}

model transactionHistory{
  id                         Int             @id @default(autoincrement())
  portfolioId                Int
  price                      Decimal         @db.Decimal(18,2)
  quantity                   Decimal         @db.Decimal(18,2)
  timestamp                  DateTime  
  type                       String   
  portfolio                  userPortfolio    @relation(fields:[portfolioId], references: [id])
}


